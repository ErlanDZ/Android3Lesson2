<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/size15"
    android:background="@color/ItemCharacterCardBackground"
    app:cardCornerRadius="@dimen/size10"
    app:cardElevation="@dimen/size10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/RootBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_name_episode"
            android:layout_marginStart="@dimen/size10"
            tools:text="@tools:sample/lorem"
            android:textSize="@dimen/sp30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_air_date_episode"
            android:layout_marginStart="@dimen/size10"
            tools:text="@tools:sample/lorem"
            android:textSize="@dimen/sp30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_episode_episode"
            android:layout_marginStart="@dimen/size10"
            tools:text="@tools:sample/lorem"
            android:textSize="@dimen/sp30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_url_episode"
            android:layout_marginStart="@dimen/size10"
            tools:text="@tools:sample/lorem"
            android:textSize="@dimen/sp30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_created_episode"
            android:layout_marginStart="@dimen/size10"
            tools:text="@tools:sample/lorem"
            android:textSize="@dimen/sp30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>